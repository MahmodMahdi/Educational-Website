@model BusinessLogicLayer.ViewModels.LoginUserViewModel
@{
	ViewData["Title"] = "Login";
	Layout = "_Layout2";
}
<head>
	<meta charset="UTF-8">
	<title> Login</title>
	<link rel="stylesheet" href="~/css/Login.css">
	<!-- Fontawesome CDN Link -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
	<div class="container">
		<input type="checkbox" id="flip">
		<div class="cover">
			<div class="front">
				<img src="~/image/download (2).jpeg" />
				@*<img src="~/image/oip.jpeg" />*@
			</div>

		</div>
		<div class="forms">
			<div class="form-content">
				<div class="login-form">
					<div class="title">Login</div>
					<form asp-action="Login">
						<div asp-validation-summary="ModelOnly" class="text-danger"></div>
						<div class="input-boxes">
							<div class="input-box">
								<i class="fas fa-envelope"></i>
								<input asp-for="Email" type="text" placeholder="Enter your email">
								<span asp-validation-for="Email" class="text-danger"></span>
							</div>

							<div class="input-box">
								<i class="fas fa-lock"></i>
								<input asp-for="Password" type="password" placeholder="Enter your password">
								<span asp-validation-for="Password" class="text-danger"></span>
							</div>

							<div class="form-group form-check">
								<input class="form-check-input" asp-for="RememberMe" />
								<span>RememberMe</span>
							</div><br />
							<div class="button input-box">
								<input type="submit" value="Sumbit">
							</div>
							<div class="text sign-up-text">Don't have an account? <a asp-action="Register">Sign up</a></div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</body>
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}


